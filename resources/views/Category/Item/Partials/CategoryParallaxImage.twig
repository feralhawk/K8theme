{% set categoryDescriptionTop = ceresConfig.item.showCategoryDescriptionTop %}

<div class="parallax-img-container"{% if category.details[0].imagePath is not empty %} style="background-image: url(/documents/{{ category.details[0].imagePath }});"{% endif %}>
    <div class="container-max">
        <div class="parallax-text-wrapper">
            <div class="parallax-text-container">
                <h1 class="h2 category-title">{{ category.details[0].name | raw }}</h1>
                    {% if categoryDescriptionTop == "description1" or categoryDescriptionTop == "both" %}
                       {% if category.details[0].description | raw is not empty %}
                        <div class="category-description m-b-1">{{ category.details[0].description | raw }}</div>
                       {% endif %}
                    {% endif %}
                    {% if categoryDescriptionTop == "description2" or categoryDescriptionTop == "both" %}
                       {% if category.details[0].description2 | raw is not empty %}
                        <div class="category-description m-b-1">{{ category.details[0].description2 | raw }}</div>
                       {% endif %}
                    {% endif %}
            </div>
        </div>
    </div>
</div>
